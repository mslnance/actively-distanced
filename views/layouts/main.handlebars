<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actively Distanced</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-default">
            <a class="navbar-brand" href="/">Actively Distanced</a>
        </nav>
    </header>


    <!-- Navbar Section -->
    <section class="nav-sec">
        <div class="d-flex justify-content-between">
            <div class="p-2 nav-icon-lg mint-green">
                <a class="nav-icon" href="/">
                    <h3 class="ui teal image header">Home</h3>
                </a>
            </div>
            {{#if loggedIn}}
            <div class="p-2 nav-icon-lg dark-black">
                <a class="nav-icon" href="/create-post">
                    <h3 class="ui teal image header">+ Activity</h3>
                </a>
            </div>
            <div class="p-2 nav-icon-lg dark-black">
                <a class="nav-icon" href="/my-activities">
                    <h3 class="ui teal image header">My activities</h3>
                </a>
            </div>
            <div class="p-2 nav-icon-lg dark-black">
                <a class="nav-icon" href="/logout">
                    <h3 class="ui teal image header">Logout</h3>
                </a>
            </div>
            {{else}}
            <div class="p-2 nav-icon-lg dark-black">
                <a class="nav-icon" href="/login">
                    <h3 class="ui teal image header">Login</h3>
                </a>
            </div>
            {{/if}}
        </div>
    </section>

    <div class="wrapper">

        <main>
            {{{ body }}}
        </main>
        <footer>
            <center>
                <h4 class="ui teal image header">Have fun with safe activities! </h4>
            </center>
        </footer>
    </div>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}
</body>

</html>