<h3 class="ui center aligned header" id="category-header">Trending</h2>
<div class="ui stackable two column divided grid container">
  <div class="row">
    <div class="column">
      <div class="ui segment">
            <a href="/outdoor">
                <h4> #Outdoor Actvities</h4>
            </a>
      </div>
    </div>
    <div class="column">
      <div class="ui segment">
            <a href="/virtual">
                <h4>#Virtual Actvities</h4>
            </a>
      </div>
    </div>
  </div>
</div>

<div class="postbox">
    <div class="col-lg-12">
        {{#each posts as |post|}}
        <div class="cardbox">
            <div class="cardbox-heading">
                <div class="media-profile m-0">
                    <div class="d-flex mr-3">
                        <span class="emoji">üêº </span>
                        <div class="media-body">
                            <p class="m-0">{{dataValues.user.dataValues.username}}</p>
                            <small><span>üïí{{dataValues.time}} | {{dataValues.date}}</span></small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="body-container">
                <h3 class="ui teal image header">{{dataValues.title}}</h3><br>
                <h5 class="ui black image header">{{dataValues.description}}</h4><br>
                    <div class="cardbox-item">
                        <a href="#myModal{{dataValues.id}}" data-toggle="modal">
                            <img class="img-responsive media" src="{{dataValues.image_url}}">
                        </a>
                    </div>
            </div>
            <a href="/edit-activity/{{dataValues.id}}">Edit Activity</a>
            <div class="comments">
                <h1 class="ui black image header">Comments</h1>
                {{#each comments as |comment|}}
                <div>
                    {{comment.dataValues.comment_text}} by {{comment.dataValues.user.dataValues.username}}
                </div>
                {{/each}}
            </div>
            <form class="comment-form" data-postId={{dataValues.id}}>
                <div>
                    <textarea name="comment-body" class="comment-area"></textarea>
                </div>

                <div>
                    <button type="submit" class="ui fluid large teal submit button">add comment</button>
                </div>
            </form>
            {{!-- <button type="button" class="like-btn">like</button> --}}
        </div>
        {{/each}}
    </div>
</div>
<div class="container">
    <!-- Trigger the modal with a button -->
    <a href="#myModal" data-toggle="modal">
        <img class="img-responsive media" src="{{dataValues.image_url}}">
    </a>
    <!-- Modal -->
</div>
</div>

<script src="/javascript/comment.js"></script>
