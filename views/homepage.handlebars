<div class="postbox">
    <div class="col-lg-12">

        {{#each posts as |post|}}
        {{!-- {{> post-info post }} --}}
        <div class="cardbox">
            <div class="cardbox-heading">
                <div class="media m-0">
                    <div class="media-body">
                        <div>
                            <h3 class="ui teal image header">{{dataValues.user.dataValues.id}}</h3>
                            <h3 class="ui teal image header">{{dataValues.title}}</h3><br>
                            <h4 class="ui black image header">{{dataValues.description}}</h4><br>
                            <h4 class="ui teal image header">{{dataValues.date}}</h4><br>
                            <h4 class="ui teal image header">{{dataValues.time}}</h4><br>
                            <div class="cardbox-item">
                                <a href="#myModal" data-toggle="modal">
                                    <img class="img-responsive media" src="{{dataValues.image_url}}">
                                </a>
                            </div>
                            <h4 class="ui teal image header">By: {{dataValues.user.dataValues.username}}</h4><br>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- <a href="/edit/{{dataValues.id}}" class="edit-link">Edit activity</a> --}}
            <a href="/edit-activity/{{dataValues.id}}">Edit Activity</a>
            <div class="comments">
                <h1>Comments</h1>
                {{#each comments as |comment|}}
                <div>
                    {{comment.dataValues.comment_text}} by {{comment.dataValues.user.dataValues.username}}
                </div>
                {{/each}}
            </div>
            <form class="comment-form" data-postId={{dataValues.id}}>
                <div>
                    <textarea name="comment-body"></textarea>
                </div>

                <div>
                    <button type="submit">add comment</button>
                    {{!-- <button type="button" class="upvote-btn">upvote</button> --}}
                </div>
            </form>
            {{!-- <button type="button" class="like-btn">like</button> --}}
        </div>
        {{/each}}

        <div class="trending-box hidden-xs hidden-md">
            <div class="row">
                <div class="col-lg-12">
                    <a href="photo_stories.html">
                        <h4>Outdoor Actvities</h4>
                    </a>
                </div>

            </div>
        </div>
        <div class="trending-box hidden-xs hidden-md">
            <div class="row">
                <div class="col-lg-12">
                    <a href="photo_stories.html">
                        <h4>Virtual Actvities</h4>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <!-- Trigger the modal with a button -->
    <a href="#myModal" data-toggle="modal">
        <img class="img-responsive media" src="{{dataValues.image_url}}">
    </a>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <h4 class="modal-title">{{dataValues.title}}</h4>
            {{!-- </div> --}}
            {{!-- {{#each posts as |post|}} --}}
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="row">
                            {{#each posts as |post|}}
                            <div class="modal-body">
                                <div class="col-md-8 modal-image">
                                    <img class="img-responsive media" src="{{dataValues.image_url}}">
                                </div>
                                <div class="col-md-4 modal-meta">
                                    <div class="modal-meta-top">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                            <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
                                        </button>
                                        <div class="img-poster clearfix">
                                            <h3 class="ui teal image header">{{user_id}} </h3><br>
                                            <h3 class="ui teal image header">{{dataValues.title}}</h3><br>
                                            <h4 class="ui black image header">{{dataValues.description}}</h4><br>
                                            <h4 class="ui teal image header">{{dataValues.date}}</h4><br>
                                            <h4 class="ui teal image header">{{dataValues.time}}</h4><br>
                                            <h3 class="ui teal image header">{{dataValues.date}}</h3><br>
                                        </div>
                                        <ul class="img-comment-list">
                                            <li>
                                                <div class="comment-text">
                                                    <a href=" {{routes}}">
                                                        <h4 class="ui teal image header"> user_id {{user_id}} </h4>
                                                    </a>
                                                    <p>{{comment_text}} placeholder comments...</p>
                                                    <div class="date sub-text">{{dataValues.title}}</div>
                                                </div>
                                            </li>
                                        </ul>
                                        <div class="modal-meta-bottom">
                                            <ul>
                                                <li>
                                                    <a class="modal-like" href="#"><i class="fa fa-heart"></i></a><span
                                                        class="modal-one"> {{likes}}</span> |
                                                    <a class="modal-comment" href="#"><i
                                                            class="fa fa-comments"></i></a><span>
                                                        {{comments}}</span> </li>

                                                <div class="comment-body">
                                                    <input class="form-control input-lg" type="text"
                                                        placeholder="Write your comment...">
                                                    <div class="button">
                                                        <h5>
                                                            <center>Send</center>
                                                        </h5>
                                                    </div>
                                                </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#myBtn").click(function () {
            $("#myModal").modal({ keyboard: true });
        });
        $("#myBtn2").click(function () {
            $("#myModal2").modal({ keyboard: false });
        });
    });
</script>

